<!doctype html>

<html>
<head>
	<title>Progress Calendar Screen</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/calendar.css" rel="stylesheet">
	<link href="/css/main.css" rel="stylesheet">
</head>

<body>
	<div class="container">
		<div class="jumbotron">
			<h1>
				<a href="stats" style="float:left" id="statsScreen" aria-label="Stats Screen">
					<span class="glyphicon glyphicon-dashboard" aria-hidden="true">
				</a>
				<button id="backButton" onclick="backButtonClick()"class="btn btn-default btn-lg btn-outline-*" aria-label="Previous Month">
				  <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
				</button>
				<span id="currentMonth"> </span>
				<button id="forwardButton" onclick="forwardButtonClick()" class="btn btn-default btn-lg btn-outline-*" aria-label="Next Month">
				  <span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span>
				</button>
				<a href="#" id="addContent" style="float:right" aria-label="Add Task">
				  <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
			  </a>
		</h1>
		</div>
	</div>
	<div class="container">
		<div class="calendarLayout" style="overflow-x:auto;">
				<p>
					<table id="calendar">
						<tr id="daysOfWeek">
							<th>Sun</th>
							<th>Mon</th>
							<th>Tues</th>
							<th>Wed</th>
							<th>Thurs</th>
							<th>Fri</th>
							<th>Sat</th>
						</tr>
						{{#each week}}

						{{/each}}
					</table>
				</p>
		</div>
		<div class="calendarList" style="overflow-x:auto;">
				<p class = "addTask">
					<table id="listView">
						<tr id="listTitles">
							<th><span id="currentDay"></span></th>
							<th></th>
							<th></th>
							<th>Streak</th>
						</tr>
						<tr>
							<td>
								Placeholder Task
							</td>
							<td style="float:right">Due Date</td>
							<td>
								<a href="#" style="float:right" id="statsScreen" aria-label="Edit Tasks">
									<span class="glyphicon glyphicon-pencil" aria-hidden="true">
								</a>
							</td>
							<td>1</td>
						</tr>
					</table>
				</p>
		</div>
	</div>
	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/index.js"></script>
</body>
</html>
